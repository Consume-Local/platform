<section class="full-height flex justify-between">



    <div class="bg-white w-full md:w-1/2 p-16">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="pb-8">
                <h3 class="text-2xl text-gray-500 leading-none">Bienvenido</h3>
                <h2 class="text-2xl leading-none">Registro de usuario</h2>
            </div>

            <div class="-mx-2 flex flex-col md:flex-row">

                <div class="w-full md:w-1/2 px-2 pb-2">
                    <label class="label">Primer Nombre</label>
                    <%= f.text_field :first_name, class: "input", placeholder: "Primer Nombre" %>
                </div>

                <div class="w-full md:w-1/2 px-2 pb-2">
                    <label class="label">Primer Apellido</label>
                    <%= f.text_field :last_name, class: "input", placeholder: "Primer Apellido" %>
                </div>
            </div>

            <div class="w-full pb-2">
                <label class="label">Correo Electrónico</label>
                <%= f.email_field :email, autofocus: true, class: "input", placeholder: "Correo Electrónico" %>
            </div>


            <div class="w-full pb-2">
                <label class="label">Contraseña</label>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> carácteres minimo)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: "Contraseña" %>
            </div>

            <div class="w-full pb-2">
                <label class="label">Repetir Contraseña</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Repetir Contraseña" %>
            </div>
            

            <div class="flex justify-end">
                <%= f.submit "Registrarme", class: "button primary w-full" %>
            </div>
        <% end %>

        <div class="text-center p-2 border rounded my-3">
            <p class="pb-2 font-semibold">¿Ya tienes cuenta?</p>
            <%= link_to "Iniciar Sesión", new_session_path(resource_name), class: "button secondary w-full" %><br />
        </div>

    </div>

    <div class="h-full w-full md:w-1/2 bg-center bg-cover bg-no-repeat" style="background-image:url('<%= image_path 'login.jpg' %>');"></div>

</section>